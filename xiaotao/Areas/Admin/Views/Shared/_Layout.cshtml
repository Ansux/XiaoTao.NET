<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@ViewBag.Title - 校淘网 - 后台管理</title>
   <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/admin.css" rel="stylesheet" type="text/css" />
   @RenderSection("Styles", false)
   <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
   <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
         <div class="navbar-header">
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
               <span class="sr-only">Toggle</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            <a href="/Admin" class="navbar-brand"><span>校淘网</span>后台管理</a>
            <ul class="user-menu">
               <li class="dropdown pull-right">
                  <a href="#" id="userName" class="dropdown-toggle" data-toggle="dropdown">
                     <span class="glyphicon glyphicon-user"></span> @Html.Raw(Session["AdminId"] == null ? Session["AdminId"] : Session["AdminName"])
                     <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                     <li>
                        <a href="/admin/account/setting"><span class="glyphicon glyphicon-cog"></span> 设置</a>
                     </li>
                     <li>
                        <a href="/admin/account/signout"><span class="glyphicon glyphicon-log-out"></span> 登出</a>
                     </li>
                  </ul>
               </li>
            </ul>
            <!-- end dropdown -->
         </div>
      </div>
   </nav>
   <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
      <form action="#" role="search">
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
         </div>
      </form>
      <ul class="nav menu nav-tab">
         <li>
            <a data-link="/admin/manager/overview/">
               <span class="glyphicon glyphicon-dashboard"> 校淘网</span>
            </a>
         </li>
         <li class="parent" data-id="_stu">
            <a data-toggle="collapse" href="#user-item">
               <span class="glyphicon glyphicon-list"></span> 学生管理 <span class="icon pull-right"><em class="glyphicon glyphicon-s glyphicon-plus"></em></span>
            </a>
            <ul class="children collapse" id="user-item">
               <li>
                  @Html.ActionLink("学生列表", "Index", "xt_student")
               </li>
               <li>
                  @Html.ActionLink("送货区域", "Index", "xt_area")
               </li>
               <li>
                  @Html.ActionLink("学生地址", "Index", "xt_student_address")
               </li>
               <li>
                  @Html.ActionLink("实名认证", "Index", "xt_stu_certification")
               </li>
               <li>
                  @Html.ActionLink("操作日志", "Index", "xt_student_log")
               </li>
            </ul>
         </li>
         <li class="parent" data-id="_store">
            <a data-toggle="collapse" href="#goods-item"><span class="glyphicon glyphicon-list"></span> 店铺管理 <span class="icon pull-right"><em class="glyphicon glyphicon-s glyphicon-plus"></em></span></a>
            <ul class="children collapse" id="goods-item">
               <li>
                  @Html.ActionLink("申请审核", "verify", "xt_store")
               </li>
               <li>
                  @Html.ActionLink("店铺列表", "Index", "xt_store")
               </li>
               <li>
                  @Html.ActionLink("商品分类", "Index", "sp_category")
               </li>
               <li>
                  @Html.ActionLink("操作日志", "Index", "xt_store_log")
               </li>
            </ul>
         </li>
         <li class="parent" data-id="es_">
            <a data-toggle="collapse" href="#order-item"><span class="glyphicon glyphicon-list"></span> 二手管理 <span class="icon pull-right"><em class="glyphicon glyphicon-s glyphicon-plus"></em></span></a>
            <ul class="children collapse" id="order-item">
               <li>
                  @Html.ActionLink("栏目管理", "Index", "es_category")
               </li>
               <li>
                  @Html.ActionLink("商品列表", "Index", "es_goods")
               </li>
            </ul>
         </li>
         <li class="parent" data-id="dn_">
            <a data-toggle="collapse" href="#blog-item"><span class="glyphicon glyphicon-list"></span> 捐赠管理 <span class="icon pull-right"><em class="glyphicon glyphicon-s glyphicon-plus"></em></span></a>
            <ul class="children collapse" id="blog-item">
               <li>
                  @Html.ActionLink("栏目管理", "Index", "dn_category")
               </li>
               <li>
                  @Html.ActionLink("商品列表", "Index", "dn_goods")
               </li>
            </ul>
         </li>
         <li class="parent" data-id="xt_r">
            <a data-toggle="collapse" href="#mall-item"><span class="glyphicon glyphicon-list"></span> 系统管理 <span class="icon pull-right"><em class="glyphicon glyphicon-s glyphicon-plus"></em></span></a>
            <ul class="children collapse" id="mall-item">
               <li data-id="_role">@Html.ActionLink("权限列表", "Index", "xt_role")</li>
               <li data-id="_admin">@Html.ActionLink("管理员列表", "Index", "xt_admin")</li>
            </ul>
         </li>
         <li role="presentation" class="divider"></li>
         <li>
            <a href="/admin/account/signout"><span class="glyphicon glyphicon-user"></span> 退出登录 </a>
         </li>
      </ul>
      <div class="attribution">
         &copy; @DateTime.Now.Year - 校淘网
      </div>
   </div>
   <!-- end sidebar -->
   <div class="main">
      <div class="row breadcrumb-row">
         <ol class="breadcrumb">
            <li>
               <a href="/admin"><span class="glyphicon glyphicon-home"></span></a>
            </li>
            <li><a href='/admin/@ViewContext.RouteData.Values["controller"]'>@ViewBag.Controller</a></li>
            <li class="active">@ViewBag.Action</li>
         </ol>
      </div>
      <!-- end breadcrumb -->
      @RenderBody()
   </div>
   <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   <script src="~/Scripts/bootstrap.min.js"></script>
   <script type="text/javascript">
      // 为当前页面设置Active
      var controller = '@ViewContext.RouteData.Values["controller"]';
      $('.nav-tab>li').removeClass('active');
      $(".nav-tab>li[data-id]").each(function (k, v) {
         if (controller.indexOf($(this).attr('data-id')) > -1) {
            $(this).addClass('active');
         }
      });
   </script>
</body>
</html>