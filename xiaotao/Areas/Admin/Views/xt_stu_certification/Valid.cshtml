@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()

   <div class="form-horizontal">
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.id)

      <div class="form-group">
         <div class="col-md-offset-2 col-md-10">
            @Html.EditorFor(model => model.is_pass) 通过核验
            @Html.ValidationMessageFor(model => model.is_pass, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(model => model.result, htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
            @Html.TextAreaFor(model => model.result, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.result, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="form-group">
         <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
         </div>
      </div>
   </div>
}

