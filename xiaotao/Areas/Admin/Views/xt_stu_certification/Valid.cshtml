}
<style>
   .voucher img{
      max-width:100%;
   }
</style>
<dl class="dl-horizontal">
   <dt>
      @Html.DisplayNameFor(model => model.xt_student.email)
   </dt>
   <dd>
      @Html.DisplayFor(model => model.xt_student.email)
   </dd>

   <dt>
      @Html.DisplayNameFor(model => model.sno)
   </dt>
   <dd>
      @Html.DisplayFor(model => model.sno)
   </dd>

   <dt>
      @Html.DisplayNameFor(model => model.sname)
   </dt>
   <dd>
      @Html.DisplayFor(model => model.sname)
   </dd>

   <dt>学生数据库</dt>
   <dd>
      @if(ViewBag.exist == true)
      {
         <span class="text-success">存在该学生</span>
