@model IEnumerable<xiaotao.Models.xt_store>

@{
   ViewBag.Title = "Index";
   ViewBag.Controller = "店铺";
   ViewBag.Action = "列表";
}

<p>
    @Html.ActionLink("添加店铺", "Create")
</p>

<table class="table">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.login_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.create_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.verify)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.states)
        </th>
        <th>操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login_id)
        </td>
        <td>
            @if (item.avatar!=null)
            {
               <img src="~/Uploads/Stores/@item.avatar" />
            }
            else
            {
               <span>无</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.Raw(item.create_at.ToShortDateString())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.verify)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.states)
        </td>
        <td>
            @Html.ActionLink("更新", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("详情", "Details", new { id = item.id }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("删除", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
