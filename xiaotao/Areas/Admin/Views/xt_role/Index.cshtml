@model IEnumerable<xiaotao.Models.xt_role>

@{
   ViewBag.Title = "Index";
   ViewBag.Controller = "角色";
   ViewBag.Action = "列表";
}

<p>
   @Html.ActionLink("添加角色", "Create")
</p>

<table class="table table-hover">
   <thead>
      <tr>
         <th>
            @Html.DisplayNameFor(model => model.name)
         </th>
         <th>操作</th>
      </tr>
   </thead>
   @foreach (var item in Model)
   {
      <tr>
         <td>
            @Html.DisplayFor(modelItem => item.name)
         </td>
         <td>
            <a class="btn btn-primary btn-xs" href="xt_role/Details/@item.id">详情</a>
            <a class="btn btn-warning btn-xs" href="xt_role/Edit/@item.id">编辑</a>
            <a class="btn btn-danger btn-xs" href="xt_role/Delete/@item.id">删除</a>
         </td>
      </tr>
   }

</table>
