<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@ViewBag.Title - 校淘网 - 商铺中心</title>
   <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
   <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/mall.css" rel="stylesheet" type="text/css" />
   @RenderSection("Styles", false)
   <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
   <div class="navbar navbar-inverse navbar-fixed-top" id="nav_store">
      <div class="container">
         <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("校淘网", "Index", "Store", new { area = "mall" }, new { @class = "navbar-brand" })
         </div>
         <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
               <li data-id="orders">@Html.ActionLink("订单中心", "orders", "store")</li>
               <li data-id="prolist">@Html.ActionLink("商品管理", "prolist", "store")</li>
               <li data-id="statistics">@Html.ActionLink("统计", "statistics", "store")</li>
               <li data-id="setting">@Html.ActionLink("店铺装修", "setting", "store")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right user-menu">
               <li class="dropdown">
                  @if (Session["StoreId"] == null)
                  {
                     <a href="/mall/store/signin" id="userName">
                        登录/注册
                     </a>
                  }
                  else
                  {
                     <a href="#" id="userName" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span> @Session["StoreName"]
                        <span class="caret"></span>
                     </a>
                     <ul class="dropdown-menu">
                        <li>
                           <a href="#"><span class="glyphicon glyphicon-user"></span> 简介</a>
                        </li>
                        <li>
                           <a href="/mall/store/setting"><span class="glyphicon glyphicon-cog"></span> 设置</a>
                        </li>
                        <li>
                           <a href="/mall/store/signout"><span class="glyphicon glyphicon-log-out"></span> 登出</a>
                        </li>
                     </ul>
                  }
               </li>
            </ul>
         </div>
      </div>
   </div>

   <div class="container body-content">
      @RenderBody()
      <footer>
         <p>&copy; @DateTime.Now.Year - <a href="/">校淘网</a>xiaotao.com 版权所有</p>
      </footer>
   </div>

   <script src="~/Scripts/bootstrap.min.js"></script>
   <script>
      var action = '@ViewContext.RouteData.Values["action"]';
      $('.navbar-nav>li').removeClass('active');
      $(".navbar-nav>li[data-id]").each(function (k, v) {
         if (action.indexOf($(this).attr('data-id')) > -1) {
            $(this).addClass('active');
         }
      });
   </script>
   @RenderSection("Scripts", false)
</body>
</html>