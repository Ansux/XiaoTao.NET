@model IEnumerable<xiaotao.Models.dn_goods>

@{
   ViewBag.Title = "Index";
}

<div class="row glist">
   @foreach (var item in Model)
   {
      <div class="col-md-3 col-sm-4 col-xs-6">
         <div class="thumbnail">
            <a href="/dn/goods/details/@item.id" class="pic-link" target="_blank"><img class="lazy" src="~/Uploads/Products/@item.ori_img"></a>
            <div class="caption">
               <a href="/dn/goods/details/@item.id">@item.name</a>
            </div>
         </div>
      </div>
   }
</div>

<div class="row">
   <nav>
      <ul class="pagination">
         @Html.Raw(ViewData["pager"])
      </ul>
      @ViewBag.PageCount
   </nav>
</div>

@section Scripts{
}