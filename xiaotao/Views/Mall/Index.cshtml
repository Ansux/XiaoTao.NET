@{
   ViewBag.Title = "Index";
   Layout = null;
}
<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@ViewBag.Title - My ASP.NET Application</title>
   <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
   <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/index.css" rel="stylesheet" />
   <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
   <div class="navbar navbar-fixed-top">
      <div class="container">
         <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("校淘网", "Index", "account", new { area = "mall" }, new { @class = "navbar-brand" })
         </div>
         <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
               <li data-id="store">
                  <a href="/mall/prolist">商品列表</a>
               </li>
               <li data-id="order">
                  <a href="/mall/cart">购物车 <span class="badge" id="badge">@Session["CartItems"]</span></a>
               </li>
               <li data-id="order">
                  <a href="/mall/order">我的订单</a>
               </li>
            </ul>
            <ul class="nav navbar-nav navbar-right user-menu">
               <li class="dropdown">
                  <a href="#" id="userName" class="dropdown-toggle" data-toggle="dropdown">
                     快速导航
                     <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                     <li>
                        <a href="/mall"><span class="glyphicon glyphicon-shopping-cart"></span> 购物平台</a>
                     </li>
                     <li>
                        <a href="/es"><span class="glyphicon glyphicon-refresh"></span> 二手交易</a>
                     </li>
                     <li>
                        <a href="/dn"><span class="glyphicon glyphicon-heart"></span> 爱心捐赠</a>
                     </li>
                  </ul>
               </li>
               @if (Session["Sid"] == null)
               {
                  <li><a href="/mall/store">卖家中心</a></li>
               }
               <li class="dropdown">
                  @if (Session["Sid"] == null)
                  {
                     <a href="/mall/account/signin" id="userName">
                        登录/注册
                     </a>
                  }
                  else
                  {
                     <a href="#" id="userName" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span> @Html.Raw(Session["Sno"] == null ? Session["Semail"] : Session["Sno"])
                        <span class="caret"></span>
                     </a>
                     <ul class="dropdown-menu">
                        <li>
                           <a href="#"><span class="glyphicon glyphicon-user"></span> 简介</a>
                        </li>
                        <li>
                           <a href="/mall/account/setting"><span class="glyphicon glyphicon-cog"></span> 设置</a>
                        </li>
                        <li>
                           <a href="/mall/account/signout"><span class="glyphicon glyphicon-log-out"></span> 登出</a>
                        </li>
                     </ul>
                  }
               </li>
            </ul>
         </div>
      </div>
   </div>
   <div class="container header">
      <div class="logo clearfix">
         <h1>
            <a href="/" title="校淘网"></a>
         </h1>
         <p>淘你喜欢的，淘你想要的!</p>
      </div>
      <div class="w-search clearfix">
         <form action="/mall/prolist/search" method="get">
            <div class="w-input">
               <input type="text" name="kw" required />
            </div>
            <button type="submit">搜  索</button>
         </form>
      </div>
   </div>
   <div class="w-cate">
      <div class="container clearfix">
         <div class="cates">
            <div class="title">
               <span>全部商品分类</span>
            </div>
         </div>
         <div class="menu">
            <ul>
               <li><a href="/">首页</a></li>
               <li><a href="/es">跳瘙市场</a></li>
               <li><a href="/dn">捐赠中心</a></li>
               <li><a href="/">网站动态</a></li>
            </ul>
         </div>
         <div class="hot-news">2016台北电脑展 放肆购低至9块9</div>
      </div>
   </div>
   <div class="container" id="mall">
      <div class="w clearfix">
         <div class="list">
            <div class="item"><i class="fa fa-angle-right"></i>手机、数码</div>
            <div class="item"><i class="fa fa-angle-right"></i>电脑、外设</div>
            <div class="item"><i class="fa fa-angle-right"></i>食品、饮料</div>
            <div class="item"><i class="fa fa-angle-right"></i>男装、女装</div>
            <div class="item"><i class="fa fa-angle-right"></i>图书、音像</div>
         </div>
         <div id="hot_focus" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
               <li data-target="#hot_focus" data-slide-to="0" class="active"></li>
               <li data-target="#hot_focus" data-slide-to="1" class=""></li>
               <li data-target="#hot_focus" data-slide-to="2" class=""></li>
            </ol>
            <div class="carousel-inner" role="listbox">
               <div class="item active">
                  <img alt="First slide [900x500]" src="~/Images/b1.jpg">
               </div>
               <div class="item">
                  <img alt="First slide [900x500]" src="~/Images/b2.jpg">
               </div>
               <div class="item">
                  <img alt="First slide [900x500]" src="~/Images/b3.jpg">
               </div>
            </div>
            <a class="left carousel-control" href="#hot_focus" role="button" data-slide="prev">
               <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
               <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#hot_focus" role="button" data-slide="next">
               <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
               <span class="sr-only">Next</span>
            </a>
         </div>
         <div class="notice">
            <img src="~/Images/index_r.jpg" alt="Alternate Text" />
         </div>
      </div>
      <div class="floor">
         <div class="w">
            <div class="title">
               <h3>1F 手机数码</h3>
            </div>
            <div class="row hot-product">
               @foreach (var item in ViewBag.F1 as List<xiaotao.Models.sp_product>)
            {
                  <div class="col-md-3 col-xs-3">
                     <div class="thumbnail">
                        <a href="/mall/product/details/@item.id" class="pic-link" target="_blank"><img class="lazy" src="~/Uploads/Products/@item.ori_img"></a>
                        <div class="caption">
                           <p><span class="price">¥ @item.price</span><span class="sales">销量：@item.sales</span></p>
                           <a href="/mall/product/details/@item.id">@item.name</a>
                        </div>
                     </div>
                  </div>
            }
            </div>
         </div>
         <div class="w">
            <div class="title">
               <h3>2F 图书音像</h3>
            </div>
            <div class="row hot-product">
               @foreach (var item in ViewBag.F2 as List<xiaotao.Models.sp_product>)
            {
                  <div class="col-md-3 col-xs-3">
                     <div class="thumbnail">
                        <a href="/mall/product/details/@item.id" class="pic-link" target="_blank"><img class="lazy" src="~/Uploads/Products/@item.ori_img"></a>
                        <div class="caption">
                           <p><span class="price">¥ @item.price</span><span class="sales">销量：@item.sales</span></p>
                           <a href="/mall/product/details/@item.id">@item.name</a>
                        </div>
                     </div>
                  </div>
            }
            </div>
         </div>
         <div class="w">
            <div class="title">
               <h3>3F 食品美味</h3>
            </div>
            <div class="row hot-product">
               @foreach (var item in ViewBag.F3 as List<xiaotao.Models.sp_product>)
            {
                  <div class="col-md-3 col-xs-3">
                     <div class="thumbnail">
                        <a href="/mall/product/details/@item.id" class="pic-link" target="_blank"><img class="lazy" src="~/Uploads/Products/@item.ori_img"></a>
                        <div class="caption">
                           <p><span class="price">¥ @item.price</span><span class="sales">销量：@item.sales</span></p>
                           <a href="/mall/product/details/@item.id">@item.name</a>
                        </div>
                     </div>
                  </div>
            }
            </div>
         </div>
      </div>
      <footer>
         <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
      </footer>
   </div>
   <script src="~/Scripts/bootstrap.min.js"></script>
   <script>
      $('#hot_focus').carousel()
   </script>
</body>
</html>